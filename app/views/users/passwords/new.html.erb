<div class="row login">
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 well">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
          <div class="form-group text-center">
            <div class="logo">
                <span class="glyphicon glyphicon-flash set-logo"></span>
            </div>
            <h2>Forgot your password?</h2>
            <%= render "users/shared/errors" %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: 'Email', required: true, class: 'form-control'  %>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-default btn-lg btn-block btn-success">Send reset password link</button>
          </div>
        <% end %>
    </div>
    <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center">
      <%= link_to "Sign in", new_session_path(resource_name) %>
    </div>
</div>



