<div class="container">
    <div class="row login">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 well">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name) ) do |f| %>
              <div class="form-group text-center">
                <div class="logo">
                    <span class="glyphicon glyphicon-flash set-logo"></span>
                </div>
                <h2>Sign in</h2>
                <%= render "users/shared/errors" %>
              </div>
              <div class="form-group">
                <%= f.email_field :email, autofocus: true, placeholder: 'Email', required: true, class: 'form-control'  %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', required: true, class: 'form-control' %>
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-default btn-lg btn-block btn-success">Sign in</button>
              </div>
              <div class="form-group last-row">
                <label class="checklabel">
                    <%= f.check_box :remember_me %>
                    Remember me
                </label>
                <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'pull-right' %>
              </div>
            <% end %>
        </div>
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center">
          <%= link_to "Create an account", new_registration_path(resource_name) %>
        </div>
    </div>
</div>
