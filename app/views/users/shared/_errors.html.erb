<% if flash[:alert] %>
    <div class="alert alert-danger">
        <div class="alert-inner">
          <span class="glyphicon glyphicon-exclamation-sign"></span>
          <%= flash[:alert] %>
        </div>
    </div>
<% end %>

<% if flash[:notice] %>
    <div class="alert alert-success">
        <div class="alert-inner">
          <span class="glyphicon glyphicon-exclamation-sign"></span>
          <%= flash[:notice] %>
        </div>
    </div>
<% end %>

<%= devise_error_messages! %>
