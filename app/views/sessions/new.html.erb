<div class="container">
    <div class="row login">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 well">
            <%= form_tag sessions_path, method: :post %>
              <div class="form-group text-center">
                <div class="logo">
                    <%= image_tag('logo.png') %>
                </div>
                <h2>Sign in</h2>
              </div>
              <% if flash[:alert] %>
                  <div class="alert alert-danger">
                      <div class="alert-inner">
                        <span class="glyphicon glyphicon-exclamation-sign"></span>
                        <%= flash[:alert] %>
                      </div>
                  </div>
              <% end %>
              <div class="form-group">
                <select name='api_server' class='form-control'>
                  <% Rails.configuration.api_servers.keys.each do |api_server| %>
                    <option><%= api_server %></option>
                  <% end %>
                </select>
              </div>
              <div class="form-group">
                <input type='email' name='email' autofocus='true' placeholder='Email' required='true' class='form-control'>
              </div>
              <div class="form-group">
                <input type='password' name='password' placeholder='password' required='true' class='form-control'>
              </div>
              <div class="form-group">
                <button type="submit" class="btn btn-default btn-lg btn-block btn-success">Sign in</button>
              </div>
        </div>
    </div>
</div>
